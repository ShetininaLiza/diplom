<body>
    <script>
        function CreateRiview(publicId) {
            var text = document.getElementById('TextErorrs').getElementsByTagName('textarea').item(0).value;
            if (text.length == 0) {
                Swal.fire("Заполните пустое поле", "Заполните текстовое поле замечаний к статье.");
                return false;
            }
            else {
                $.post("/Editor/CreateReview", { PublicId: publicId, Text: text }, function (data) {
                    Swal.fire(data);
                });
            }
        }

        function DownloadFile(id) {
            $.post("/Editor/DownloadFile", { ID: id }, function (data) {
                //Swal.fire('data: ' + data);
                let a = document.createElement("a");
                let blob = new Blob([data]);
                a.href = URL.createObjectURL(blob);
                a.download = "publication_" + id + ".txt";
                //a.download = "publication_" + id + ".pdf";
                //a.download = "publication_" + id + ".docx";
                //
                a.click();

            });
        }

        function FSelect(sel, id) {
            var f = document.getElementById('TextErorrs');
            if (sel.value == 'Назначить рецензента') {
                f.style.display = 'none';
                PrintSelectReviewer();
            }
            else if (sel.value == 'Отклонить статью') {
                f.style.display = 'none';
                ClosePublication(id);
            }
            else if (sel.value == 'Отправить на доработку') {
                var rev = document.getElementById('reviewers');
                if (rev.style.display == 'block') {
                    rev.style.display = 'none';
                }
                f.style.display = 'block';
            }
        }
        function PrintSelectReviewer() {
            var rev = document.getElementById('reviewers');
            rev.style.display = 'block';
        }
        function ClosePublication(id) {
            var rev = document.getElementById('reviewers');
            if (rev.style.display == 'block') {
                rev.style.display = 'none';
            }
            Swal.fire({
                title: 'Вопрос',
                text: "Вы уверены, что хотите отклонить эту статью?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Да',
                cancelButtonText: 'Нет'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post("/Editor/ClosePublication", { publicId: id }, function (data) { });
                    Swal.fire('Готово!');
                }
            })
        }

        function UpdatePublic() {
            var publicId;
            var revId;
            publicId = document.getElementById("id").innerText;
            revId = document.getElementById("validationCustom04").value;
            //Swal.fire("data: " + publicId + ", " + revId)
            if (revId = '') { Swal.fire('Выбирете рецензента'); return false; }
            else {
                $.post("/Editor/Update", { publicId: publicId, reviewerId: revId });
            }
        }
    </script>
