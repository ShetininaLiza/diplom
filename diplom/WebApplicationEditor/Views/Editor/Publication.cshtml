    <form id="form" method="post" class="needs-validation">
        <h1>Информация о публикации</h1>
        @if (Model.Item3.Length != 0)
        {
            <div class="alert alert-primary" role="alert">
                <strong>@Model.Item3.ElementAt(0)</strong> @Model.Item3.ElementAt(1)
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="container">
            <div class="row">
                <div class="col">
                    <label style="font-weight:bold">Номер статьи:</label><br />
                    <!--<label id="id" name="publicId">@Model.Item1.Id</label>-->
                    <input id="id" type="text" value="@Model.Item1.Id" name="publicId" />

                    <br /><br />
                    <label style="font-weight:bold">Название статьи:</label><br />
                    <label>@Model.Item1.Title</label><br /><br />
                    <label style="font-weight:bold">Рубрика(и):</label><br />
                    <p id="categories">
                        @foreach (var c in Model.Item1.Categories)
                        {
                            <input id="Checkbox1" checked="checked" name="category" type="checkbox" value="@c">@c<br />
                        }
                    </p>
                </div>

                <div class="col">
                    <div>
                        <label style="font-weight:bold">Ключевые слова:</label><br />
                        <textarea id="TextWords" name="words" cols="40" rows="12">@string.Join('\n', Model.Item1.KeyWords.ToArray())</textarea><br /><br />
                    </div>
                </div>
                <div class="col">
                    <div>
                        <label style="font-weight:bold">Аннотация:</label><br />
                        <textarea id="TextAnnotation" name="annotation" cols="40" rows="12">@Model.Item1.Annotation</textarea><br /><br />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label style="font-weight:bold">Статус статьи:</label><br />
                    <label>@Model.Item1.Status</label><br />

                    <a class="w-auto btn btn-primary" href="/Editor/DownloadFile?Id=@Model.Item1.Id" role="button">Скачать последную версию статьи</a>
                    <br />
                    <label style="font-weight:bold">Дата подачи статьи:</label><br />
                    <input type="text" value="@Model.Item1.DateCreate"><br />
                    <label style="font-weight:bold">Дата публикации статьи:</label><br />
                    @if (Model.Item1.DatePublic <= Model.Item1.DateCreate)
                    {
                        <label style="font-weight:bold">Статья не опубликована</label><br />
                    }
                    else
                    {
                        <input type="text" value="@Model.Item1.DateCreate"><br />
                    }

                    @if (Model.Item1.Status.Length == 0 || Model.Item1.Status != "Отклонена")
                    {
                        @if (Model.Item1.Status == Status.Поступила.ToString() ||
                           Model.Item1.Status == Status.Изменения_внесены.ToString())
                        {
                            <select onchange="FSelect(this, @Model.Item1.Id);">
                                <option selected disabled value="">Выберите...</option>
                                <option value="Назначить рецензента">Назначить рецензента</option>
                                <option value="Отправить на доработку">Отправить на доработку</option>
                                <option value="Отклонить статью">Отклонить статью</option>
                            </select>
                        }
                        else
                        {
                            <div>
                                <label style="font-weight:bold">Рецензент статьи:</label><br />

                                @if (Model.Item1.ReviewerFIO.Length == 0)
                                {
                                    <label style="font-weight:bold">Рецензент не назначен</label><br />
                                    <select class="form-select" id="validationCustom04" required name="reviewerId">
                                        <option selected disabled value="">Выберите...</option>
                                        @if (Model.Item2 != null)
                                        {
                                            @foreach (var rev in Model.Item2)
                                            {
                                                <option value="@rev.Id">@rev.LastName @rev.Name @rev.Otch</option>
                                            }
                                        }
                                    </select>
                                    <div class="invalid-feedback">
                                        Пожалуйста, выберите рецензента.
                                    </div>
                                    <br />
                                    <button class="w-25 btn btn-lg btn-primary" type="submit" asp-controller="Editor" asp-action="Update">Назначить рецензента на статью</button>
                                }
                                else
                                {
                                    <label>@Model.Item1.ReviewerFIO</label><br />
                                }

                            </div>
                        }
                        <div id="reviewers" style="display:none">
                            <label style="font-weight:bold">Рецензент статьи:</label><br />

                            @if (Model.Item1.ReviewerFIO.Length == 0)
                            {
                                <label style="font-weight:bold">Рецензент не назначен</label><br />
                                <select class="form-select" id="validationCustom04" required name="reviewerId">
                                    <option selected disabled value="">Выберите...</option>
                                    @foreach (var rev in Model.Item2)
                                    {
                                        <option value="@rev.Id">@rev.LastName @rev.Name @rev.Otch</option>
                                    }
                                </select>
                                <div class="invalid-feedback">
                                    Пожалуйста, выберите рецензента.
                                </div>
                                <button class="w-50 btn btn-lg btn-primary" type="submit" asp-controller="Editor" asp-action="Update">Назначить рецензента на статью</button>
                            }
                            else
                            {
                                <label>@Model.Item1.ReviewerFIO</label><br />
                            }

                        </div>
                    }
                </div>
                @if (Model.Item1.Status == "Устранить_замечания_редактора" && Model.Item5.Length > 0)
                {
                    <div id="TextErorrs" class="col">
                        <label style="font-weight:bold">Укажите в чем заключаются замечания к статье:</label>
                        <textarea cols="40" rows="10">@Model.Item5</textarea><br />
                    </div>
                }
                @if (Model.Item1.Status != "Устранить_замечания_редактора")
                {
                    <div id="TextErorrs" style="display:none" class="col">
                        <label style="font-weight:bold">Укажите в чем заключаются замечания к статье:</label>
                        <textarea cols="40" rows="10"></textarea><br />
                        <button class="btn btn-primary" onclick="CreateRiview(@Model.Item1.Id)">Сохранить</button>
                    </div>
                }
                <div class="col"></div>
            </div>
            <div class="row">
                <label style="font-weight:bold">Автор(ы):</label><br />
                <table class="table table-primary">
                    <thead>
                        <tr>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Почта</th>
                            <th>Номер телефона</th>
                            <th>Место работы</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var autor in Model.Item1.Autors)
                        {
                            <tr>
                                <td>@autor.LastName</td>
                                <td>@autor.Name</td>
                                <td>@autor.Otch</td>
                                <td>@autor.Email</td>
                                <td>@autor.Phone</td>
                                <td>@autor.Work</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Item4 != null)
            {
                <div class="row">
                    <label style="font-weight:bold">Предыдущие версии статьи</label><br />
                    <table class="table table-primary">
                        <thead>
                            <tr>
                                <th>Дата версии</th>
                                <th> </th>
                                <th>Сообщение</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Item4)
                            {
                                <tr>
                                    <td>@d.Date</td>
                                    <td>
                                        <a href="/Editor/DownloadFilePublication?PublicId=@Model.Item1.Id&Id=@d.Id">Скачать</a>
                                    </td>
                                    <td>@d.Comment<td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </form>
</body>
