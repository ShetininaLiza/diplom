@using BisnessLogic.Models
@model (BisnessLogic.Models.Publication, string[], List<FilePublication>)
@{
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        input[name="publicId"] {
            border: none;
        }

            input[name="publicId"]::placeholder {
                font-weight: bold;
            }
    </style>
    <script>
        function OnLoadToDownload() {
            var id = @Model.Item1.Id;
            DownloadFile(id);
        }


    </script>
</head>
<!--onload="OnLoadToDownload();"-->
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Reviewer" asp-action="Index">Научный журнал</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="navbar-nav flex-grow-1 topmenu">
                <li class="nav-item">
                    <a class="submenu-link nav-link text-dark" href="../User/Enter">Выход</a>
                </li>
            </ul>
        </nav>
    </header>

    <form id="form" method="post" class="needs-validation">
        <h1>Информация о публикации</h1>
        @if (Model.Item2.Length != 0)
        {
            <div class="alert alert-primary" role="alert">
                <strong>@Model.Item2.ElementAt(0)</strong> @Model.Item2.ElementAt(1)
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="container">
            <div class="row">
                <div class="col">
                    <label style="font-weight:bold">Номер статьи:</label><br />
                    <input id="id" type="text" value="@Model.Item1.Id" name="publicId" />

                    <br /><br />
                    <label style="font-weight:bold">Название статьи:</label><br />
                    <label>@Model.Item1.Title</label><br /><br />
                    <label style="font-weight:bold">Рубрика(и):</label><br />
                    <p id="categories">
                        @foreach (var c in Model.Item1.Categories)
                        {
                            <input id="Checkbox1" checked="checked" name="category" type="checkbox" value="@c">@c<br />
                        }
                    </p>
                </div>

                <div class="col">
                    <div>
                        <label style="font-weight:bold">Ключевые слова:</label><br />
                        <textarea id="TextWords" name="words" cols="40" rows="12">@string.Join('\n', Model.Item1.KeyWords.ToArray())</textarea><br /><br />
                    </div>
                </div>
                <div class="col">
                    <div>
                        <label style="font-weight:bold">Аннотация:</label><br />
                        <textarea id="TextAnnotation" name="annotation" cols="40" rows="12">@Model.Item1.Annotation</textarea><br /><br />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label style="font-weight:bold">Статус статьи:</label><br />
                    <label>@Model.Item1.Status</label><br />
                    <label style="font-weight:bold">Дата подачи статьи:</label><br />
                    <input type="text" value="@Model.Item1.DateCreate"><br />
                    <label style="font-weight:bold">Дата публикации статьи:</label><br />
                    @if (Model.Item1.DatePublic <= Model.Item1.DateCreate)
                    {
                        <label style="font-weight:bold">Статья не опубликована</label><br />
                    }
                    else
                    {
                        <input type="text" value="@Model.Item1.DateCreate"><br />
                    }

                </div>
                <div class="col"></div>
            </div>
            <div class="row">
                <label style="font-weight:bold">Автор(ы):</label><br />
                <table class="table table-primary">
                    <thead>
                        <tr>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Почта</th>
                            <th>Номер телефона</th>
                            <th>Место работы</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var autor in Model.Item1.Autors)
                        {
                            <tr>
                                <td>@autor.LastName</td>
                                <td>@autor.Name</td>
                                <td>@autor.Otch</td>
                                <td>@autor.Email</td>
                                <td>@autor.Phone</td>
                                <td>@autor.Work</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Item3 != null)
            {
                <div class="row">
                    <label style="font-weight:bold">Предыдущие версии статьи</label><br />
                    <table class="table table-primary">
                        <thead>
                            <tr>
                                <th>Дата версии</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Item3)
                            {
                                <tr>
                                    <td>@d.Date</td>
                                    <td>
                                        <a href="/Reviewer/DownloadFilePublication?PublicId=@Model.Item1.Id&Id=@d.Id">Скачать</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            <a href="/Reviewer/CreateReview?Id=@Model.Item1.Id" role="button" class="w-100 btn btn-primary">Написать рецензию</a>
        </div>
    </form>
</body>
</html>
