    <script>
        function proverka() {
            var login;
            var pas;
            login = document.getElementById("TextLogin").value
            pas = document.getElementById("TextPass").value
            if ((login == '')) {
                Swal.fire("Заполните поле \"Login\"! \nВаше сообщение не отправлено!")
                return false;
            }
            if (pas == '') {
                Swal.fire("Введите пароль")
                return false;
            }
            return true;
        }
    </script>
