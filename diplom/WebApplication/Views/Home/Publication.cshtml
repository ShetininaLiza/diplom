@model IEnumerable<Publication>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Информация о статье";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Autor">Научный журнал</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="AddPublication">Добавить публикацию</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="../User/UpdateData">Изменить данные</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="MyPublications">Мои публикации</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="../User/Enter">Выход</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1>Информация о публикации</h1>
    @foreach (var str in Model)
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <label style="font-weight:bold">Название статьи:</label><br />
                    <label>@str.Title</label><br /><br />
                    <label style="font-weight:bold">Рубрика(и):</label><br />
                    <p id="categories">
                        @foreach (var c in str.Categories)
                        {
                            <input id="Checkbox1" checked="checked" name="category" type="checkbox" value="@c">@c<br />
                        }
                    </p>
                </div>
                <div class="col">
                    <div>
                        <label style="font-weight:bold">Ключевые слова:</label><br />
                        <textarea id="TextWords" name="words" cols="40" rows="12">@string.Join('\n', str.KeyWords.ToArray())</textarea><br /><br />
                    </div>
                </div>
                <div class="col">
                    <div>
                        <label style="font-weight:bold">Аннотация:</label><br />
                        <textarea id="TextAnnotation" name="annotation" cols="40" rows="12">@str.Annotation</textarea><br /><br />
                    </div>
                </div>
                <div class="col">
                    <label style="font-weight:bold">Статус статьи:</label><br />
                    <label>@str.Status</label><br /><br />
                    <label style="font-weight:bold">Дата подачи статьи:</label><br />
                    <input type="text" value="@str.DateCreate">
                    <label style="font-weight:bold">Дата публикации статьи:</label><br />
                    @if (str.DatePublic <= str.DateCreate)
                    {
                        <label style="font-weight:bold">Статья не опубликована</label><br />
                    }
                    else
                    {
                        <input type="text" value="@str.DateCreate"><br />
                    }
                </div>
            </div>
            <div class="row">
                <label style="font-weight:bold">Автор(ы):</label><br />
                <table class="table table-primary">
                    <thead>
                        <tr>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Почта</th>
                            <th>Номер телефона</th>
                            <th>Место работы</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var autor in str.Autors)
                        {
                            <tr>
                                <td>@autor.LastName</td>
                                <td>@autor.Name</td>
                                <td>@autor.Otch</td>
                                <td>@autor.Email</td>
                                <td>@autor.Phone</td>
                                <td>@autor.Work</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</body>
</html>
